<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.completed %> -
      <%= link_to(task.title, task) %> -
      <%= link_to("Delete task", task_path(task),
            method: :delete,
            data: { confirm: "Delete #{task.title}?"}) %></li>
  <% end %>
</ul>

<%= link_to("Add a new task", tasks_new_path) %>
